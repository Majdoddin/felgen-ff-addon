{
  "manifest_version": 2,
  "name": "Shopify to HubSpot Email",
  "version": "1.1",
  "description": "Opens HubSpot when clicking the Copy Email icon in Shopify.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://admin.shopify.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "shopify-hubspot-email@majdoddin.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
