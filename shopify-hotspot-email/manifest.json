{
  "manifest_version": 2,
  "name": "Shopify to HubSpot Email",
  "version": "1.15",
  "description": "Opens HubSpot when clicking the Copy Email icon in Shopify.",
  "icons": {
    "48": "icon.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "alarms",
    "management"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://admin.shopify.com/*",
        "*://easydpd.247apps.de/*"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "shopify-hubspot-email@majdoddin.com",
      "update_url": "https://raw.githubusercontent.com/Majdoddin/felgen-ff-addon/master/updates.json",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
